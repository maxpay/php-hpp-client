{
    "name": "maxpay/hpp-client",
    "description": "Maxpay PHP Library",
    "keywords": [
        "maxpay",
        "psp"
    ],
    "homepage": "https://maxpay.com/",
    "license": "MIT",
    "authors": [
        {
            "name": "Maxpay team",
            "homepage": "https://github.com/maxpay"
        }
    ],
    "require": {
        "php": ">=7.1",
        "ext-iconv": "*",
        "ext-mbstring": "*",
        "psr/log": "~1.0",
        "ext-json": "*",
        "ext-curl": "*"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "2.8.1",
        "phpstan/phpstan": "0.8.5"
    },
    "autoload": {
        "psr-4": { "Maxpay\\" : "src/" }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0-dev"
        }
    }
}
